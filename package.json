{
    "name": "chainwright",
    "type": "module",
    "bin": {
        "chainwright": "./dist/cli/index.js"
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsx src/cli/index.ts chainwright ./tests/wallet-setup -f",
        "test": "vitest --exclude '**/*.spec.ts'",
        "format": "biome format --write ./src",
        "test:e2e:debug": "playwright test --config=tests/playwright.config.ts --debug",
        "test:e2e:ui": "playwright test --config=tests/playwright.config.ts --ui",
        "add:wallet": "tsx scripts/add-wallet.ts"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.1",
        "@playwright/test": "^1.57.0",
        "@types/adm-zip": "^0.5.7",
        "@types/cli-progress": "^3.11.6",
        "@types/node": "^25.0.6",
        "adm-zip": "^0.5.16",
        "tsup": "^8.5.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16",
        "zod": "^4.3.5"
    },
    "dependencies": {
        "@inquirer/prompts": "^8.1.0",
        "cli-progress": "^3.12.0",
        "commander": "^14.0.2",
        "glob": "^13.0.0",
        "picocolors": "^1.1.1"
    },
    "overrides": {
        "@rollup/rollup-win32-arm64-msvc": "^4.52.5"
    }
}
